<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <include layout="@layout/main_title"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_pay_success"/>

            <TextView
                android:id="@+id/tv_receivesuccessful"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:text="支付成功  正在为您发货"
                android:textColor="#aaa"
                android:textSize="15sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="17dp"
                android:weightSum="2">

                <TextView
                    android:id="@+id/tv_order_detail"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_margin="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_pay_after_btn1"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="查看订单"
                    android:textColor="#ffffff"
                    android:textSize="17dp"
                    />

                <TextView
                    android:id="@+id/tv_store"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_margin="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_pay_after_btn2"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="再逛逛"
                    android:textColor="#ffffff"
                    android:textSize="17dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f2f2f2"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:gravity="center"
                    android:text="看看这些推荐"
                    android:textColor="#aaa"
                    android:textSize="11sp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>