<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll_comm_layout"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:orientation="horizontal"
        android:background="@color/sly_navigation_bar">

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent">
          <LinearLayout
              android:id="@+id/btn_main_back"
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:clickable="true"
              android:orientation="horizontal"
              android:layout_alignParentLeft="true"
              android:paddingLeft="11dp"
              android:paddingRight="40dp">

              <Button
                  android:layout_width="10dp"
                  android:layout_height="17dp"
                  android:layout_gravity="center_vertical"
                  android:background="@drawable/news_return"
                  android:padding="10dp"
                  android:paddingLeft="10dp"/>

          </LinearLayout>

          <TextView
              android:id="@+id/tv_main_title"
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:layout_centerHorizontal="true"
              android:gravity="center"
              android:text="首页"
              android:textColor="@color/sly_text_white"
              android:textSize="17sp" />


          <LinearLayout
              android:id="@+id/ll_right"
              android:layout_toLeftOf="@id/tv_main_title"
              android:layout_alignParentRight="true"
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:clickable="true"
              android:paddingLeft="20dp"
              android:paddingRight="25dp">

              <TextView
                  android:id="@+id/tv_main_right"
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:layout_marginBottom="14dp"
                  android:layout_marginRight="10dp"
                  android:layout_marginTop="14dp"
                  android:gravity="center"
                  android:textColor="@color/sly_text_666666"
                  />

          </LinearLayout>
      </RelativeLayout>
    </LinearLayout>

</LinearLayout>