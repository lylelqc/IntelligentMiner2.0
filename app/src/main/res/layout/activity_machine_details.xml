                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/sly_text_333333"
                        android:textSize="12sp" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include layout="@layout/gray_line"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:background="#f7faff">

                    <TextView
                        android:id="@+id/tv_mine2_icon"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/monitor_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tv_mine2_icon"
                        android:text="矿池二"
                        android:textColor="@color/sly_text_333333"
                        android:textSize="14sp" />
                </RelativeLayout>

                <include layout="@layout/gray_line"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="41dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_centerVertical="true"
                        android:text="矿池"
                        android:textSize="12sp"
                        android:textColor="@color/sly_text_666666"
                        />

                    <TextView
                        android:id="@+id/tv_machine_details_mine2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/sly_text_333333"
                        android:textSize="12sp" />
                </RelativeLayout>

                <include layout="@layout/gray_line"/>

                <RelativeLayout
