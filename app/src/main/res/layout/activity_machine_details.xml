                            android:gravity="center"
                            android:textSize="14sp"
                            android:text="本月"
                            android:textColor="@color/select_text_color"/>

                        <Button
                            android:id="@+id/btn_machine_details_hours"
                            android:layout_width="64dp"
                            android:layout_height="match_parent"
                            android:layout_toLeftOf="@+id/btn_machine_details_month"
                            android:layout_centerVertical="true"
                            android:background="@drawable/selector_bg_left_circle"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:text="24小时"
                            android:textColor="@color/select_text_color"/>

                    </RelativeLayout>

                </RelativeLayout>

                <include layout="@layout/gray_line"/>

                <com.github.mikephil.charting.charts.LineChart
