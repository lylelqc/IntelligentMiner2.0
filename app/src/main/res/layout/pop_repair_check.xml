<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:layout_marginBottom="22dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="维修单号"
                android:textSize="14sp"
                android:textColor="#353a3e"/>

            <RelativeLayout
                android:layout_width="151dp"
                android:layout_height="29dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/shape_f6f6f6_3dp">

                <EditText
                    android:id="@+id/et_repair_bill_id"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textSize="12sp"
                    android:background="@null"
                    android:hint="  请输入维修单号"
                    android:textColorHint="@color/sly_text_bfbfbf"/>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_ip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IP"
                android:textSize="14sp"
                android:textColor="#353a3e"/>

            <RelativeLayout
                android:layout_width="151dp"
                android:layout_height="29dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/shape_f6f6f6_3dp">

                <EditText
                    android:id="@+id/et_repair_ip"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textSize="12sp"
                    android:background="@null"
                    android:hint="  请输入IP"
                    android:inputType="number"
                    android:digits="0123456789."
                    android:textColorHint="@color/sly_text_bfbfbf"/>
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/sly_line_ececec"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="派单时间"
                android:textSize="14sp"
                android:textColor="#848689"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="22dp"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_repair_begin_ptime"
                    android:layout_width="109dp"
                    android:layout_height="29dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/shape_f6f6f6_3dp">

                    <TextView
                        android:id="@+id/tv_repair_begin_ptime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#353a3e"/>

                    <TextView
                        android:layout_width="11dp"
                        android:layout_height="7dp"
                        android:layout_marginLeft="14dp"
                        android:layout_toRightOf="@+id/tv_repair_begin_ptime"
                        android:background="@drawable/xiala_weixiudan_icon"
                        />

                </LinearLayout>

                <TextView
                    android:layout_width="31dp"
                    android:layout_height="26dp"
                    android:text="-"
                    android:textSize="14sp"
                    android:textColor="#3a3a3a"
                    android:gravity="center"
                    />

                <LinearLayout
                    android:id="@+id/ll_repair_end_ptime"
                    android:layout_width="109dp"
                    android:layout_height="29dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:background="@drawable/shape_f6f6f6_3dp">

                    <TextView
                        android:id="@+id/tv_repair_end_ptime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#353a3e"/>

                    <TextView
                        android:layout_width="11dp"
                        android:layout_height="7dp"
                        android:layout_marginLeft="14dp"
                        android:layout_toRightOf="@+id/tv_repair_end_ptime"
                        android:background="@drawable/xiala_weixiudan_icon" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_repair_check_endtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="维修结束时间"
                    android:textSize="14sp"
                    android:textColor="#848689"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="22dp"
                    android:layout_marginLeft="15dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_repair_begin_time"
                        android:layout_width="109dp"
                        android:layout_height="29dp"
                        android:gravity="center"
                        android:background="@drawable/shape_f6f6f6_3dp">

                        <TextView
                            android:id="@+id/tv_repair_begin_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="#353a3e"/>

                        <TextView
                            android:layout_width="11dp"
                            android:layout_height="7dp"
                            android:layout_marginLeft="14dp"
                            android:layout_toRightOf="@+id/tv_repair_begin_time"
                            android:background="@drawable/xiala_weixiudan_icon"
                            />
                    </LinearLayout>

                    <TextView
                        android:layout_width="31dp"
                        android:layout_height="26dp"
                        android:text="-"
                        android:textSize="14sp"
                        android:textColor="#3a3a3a"
                        android:gravity="center"
                        />

                    <LinearLayout
                        android:id="@+id/ll_repair_end_time"
                        android:layout_width="109dp"
                        android:layout_height="29dp"
                        android:gravity="center"
                        android:background="@drawable/shape_f6f6f6_3dp">

                        <TextView
                            android:id="@+id/tv_repair_end_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="#353a3e"/>

                        <TextView
                            android:layout_width="11dp"
                            android:layout_height="7dp"
                            android:layout_marginLeft="14dp"
                            android:layout_toRightOf="@+id/tv_repair_end_time"
                            android:background="@drawable/xiala_weixiudan_icon"
                            />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/sly_line_ececec" />

    <LinearLayout
        android:id="@+id/ll_chooseStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="21dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="选择状态"
            android:textColor="#353a3e"
            android:textSize="14sp" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="18dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.sly.app.view.ToggleRadioButton
                android:id="@+id/rb_repair_check_status1"
                android:layout_width="78dp"
                android:layout_height="32dp"
                android:background="@drawable/selector_flow_color"
                android:button="@null"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@color/selector_flow_text_color"/>

            <com.sly.app.view.ToggleRadioButton
                android:id="@+id/rb_repair_check_status2"
                android:layout_width="78dp"
                android:layout_height="32dp"
                android:layout_marginLeft="11dp"
                android:background="@drawable/selector_flow_color"
                android:button="@null"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@color/selector_flow_text_color"/>

            <com.sly.app.view.ToggleRadioButton
                android:id="@+id/rb_repair_check_status3"
                android:layout_width="78dp"
                android:layout_height="32dp"
                android:layout_marginLeft="11dp"
                android:background="@drawable/selector_flow_color"
                android:button="@null"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@color/selector_flow_text_color"/>

            <com.sly.app.view.ToggleRadioButton
                android:id="@+id/rb_repair_check_status4"
                android:layout_width="78dp"
                android:layout_height="32dp"
                android:layout_marginLeft="11dp"
                android:background="@drawable/selector_flow_color"
                android:button="@null"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@color/selector_flow_text_color"/>

        </RadioGroup>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp">

            <com.sly.app.view.ToggleRadioButton
                android:id="@+id/rb_repair_check_status5"
                android:layout_width="78dp"
                android:layout_height="32dp"
                android:background="@drawable/selector_flow_color"
                android:button="@null"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@color/selector_flow_text_color"/>
        </RadioGroup>

        <View
            android:layout_width="match_parent"
            android:layout_height="12dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/tv_repair_reset"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="重置"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="@drawable/shape_btn_gradient_blue"/>

        <TextView
            android:id="@+id/tv_repair_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="完成"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="@drawable/shape_btn_gradient_blue2"/>
    </LinearLayout>

</LinearLayout>