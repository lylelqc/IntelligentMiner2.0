<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/tv_master_head_icon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_centerVertical="true"
            android:background="@drawable/miners_my"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:id="@+id/tv_master_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_master_head_icon"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="我的账号："
            android:textSize="15sp"
            android:textColor="@color/sly_text_333333"
            />

        <TextView
            android:id="@+id/tv_master_my_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_master_account"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="@color/sly_text_333333"/>
    </RelativeLayout>

    <include layout="@layout/gray_line"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/tv_master_child_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:text="是否授权"
            android:textSize="15sp"
            android:textColor="@color/sly_text_333333"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_master_child_account">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="("
                android:textSize="15sp"
                android:textColor="@color/sly_text_333333"/>

            <TextView
                android:id="@+id/tv_master_auth_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@color/sly_text_333333"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=")"
                android:textSize="15sp"
                android:textColor="@color/sly_text_333333"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_master_account_auth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/miners_shut_icon"
            />
    </RelativeLayout>

    <include layout="@layout/gray_line"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/tv_master_free_icon"
            android:layout_width="12dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:background="@drawable/miners_cost_icon"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:id="@+id/tv_master_free"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_master_free_icon"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="费用"
            android:textSize="15sp"
            android:textColor="@color/sly_text_333333"
            />

        <TextView
            android:id="@+id/tv_master_auth_free"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/miners_shut_icon"
            />
    </RelativeLayout>

    <include layout="@layout/gray_line"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/tv_master_electric_icon"
            android:layout_width="13dp"
            android:layout_height="19dp"
            android:layout_centerVertical="true"
            android:background="@drawable/miners_electric_icon"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:id="@+id/tv_master_electric"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_master_electric_icon"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:gravity="center"
            android:text="耗电量"
            android:textSize="15sp"
            android:textColor="@color/sly_text_333333"
            />

        <TextView
            android:id="@+id/tv_master_auth_electric"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/miners_shut_icon"
            />
    </RelativeLayout>

    <include layout="@layout/gray_line"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/tv_master_run_icon"
            android:layout_width="17dp"
            android:layout_height="14dp"
            android:layout_centerVertical="true"
            android:background="@drawable/miners_function_icon"
            android:layout_marginLeft="14dp"/>

        <TextView
            android:id="@+id/tv_master_run"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_master_run_icon"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:gravity="center"
            android:text="运行率"
            android:textSize="15sp"
            android:textColor="@color/sly_text_333333"
            />

        <TextView
            android:id="@+id/tv_master_auth_run"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/miners_shut_icon"
            />
    </RelativeLayout>

    <include layout="@layout/gray_line"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/tv_master_spare_icon"
            android:layout_width="15dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:background="@drawable/mine_owner_parts"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:id="@+id/tv_master_spare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_master_spare_icon"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:gravity="center"
            android:text="配件情况"
            android:textSize="15sp"
            android:textColor="@color/sly_text_333333"
            />

        <TextView
            android:id="@+id/tv_master_auth_spare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/miners_shut_icon"
            />
    </RelativeLayout>

</LinearLayout>