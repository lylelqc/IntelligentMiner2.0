<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--<include layout="@layout/main_title"/>-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/operation_monitorbg"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="17dp"
                        android:layout_marginTop="22dp"
                        android:text="在线矿机"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:background="@drawable/operation_green"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_online_text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="在线矿机"
                        android:textSize="12sp"
                        android:textColor="#666666"/>

                    <TextView
                        android:id="@+id/tv_online_machine1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@+id/tv_online_text1"
                        android:text="562"
                        android:textSize="12sp"
                        android:textColor="#666666"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@+id/tv_online_machine1"
                        android:text="台"
                        android:textSize="12sp"
                        android:textColor="#666666"/>
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_monitor_rate1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="0.0"
                        android:gravity="center"
                        android:textSize="29sp"
                        android:textColor="#90d262"/>

                    <TextView
                        android:id="@+id/tv_rate1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tv_monitor_rate1"
                        android:paddingBottom="7dp"
                        android:layout_alignParentBottom="true"
                        android:text=" %"
                        android:textSize="12sp"
                        android:textColor="#90d262"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_explain1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/bg_explain"
                        android:text="绿灯无特殊情况"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:textColor="#666666"/>
                </RelativeLayout>
            </LinearLayout>

            <View android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#f2f2f2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/operation_monitorbg"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="17dp"
                        android:layout_marginTop="22dp"
                        android:text="离线矿机"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:background="@drawable/operation_red"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_online_text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="离线（断网/断电）"
                        android:textSize="12sp"
                        android:textColor="#666666"/>

                    <TextView
                        android:id="@+id/tv_online_machine2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@+id/tv_online_text2"
                        android:text="0"
                        android:textSize="12sp"
                        android:textColor="#666666"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@+id/tv_online_machine2"
                        android:text="台"
                        android:textSize="12sp"
                        android:textColor="#666666"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_monitor_rate2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="0.0"
                        android:gravity="center"
                        android:textSize="29sp"
                        android:textColor="#ff6e6e"/>

                    <TextView
                        android:id="@+id/tv_rate2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tv_monitor_rate2"
                        android:paddingBottom="7dp"
                        android:layout_alignParentBottom="true"
                        android:text=" %"
                        android:textSize="12sp"
                        android:textColor="#ff6e6e"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_explain2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="33dp"
                        android:background="@drawable/bg_explain"
                        android:text="红灯情况异常"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:textColor="#666666"/>
                </RelativeLayout>
            </LinearLayout>

            <View android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#f2f2f2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/operation_monitorbg"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="17dp"
                        android:layout_marginTop="22dp"
                        android:text="算力异常"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:background="@drawable/operation_orange"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_online_text3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="算力异常"
                        android:textSize="12sp"
                        android:textColor="#666666"/>

                    <TextView
                        android:id="@+id/tv_online_machine3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@+id/tv_online_text3"
                        android:text="0"
                        android:textSize="12sp"
                        android:textColor="#666666"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@+id/tv_online_machine3"
                        android:text="台"
                        android:textSize="12sp"
                        android:textColor="#666666"/>
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_monitor_rate3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="0.0"
                        android:gravity="center"
                        android:textSize="29sp"
                        android:textColor="#ffbc32"/>

                    <TextView
                        android:id="@+id/tv_rate3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tv_monitor_rate3"
                        android:paddingBottom="7dp"
                        android:layout_alignParentBottom="true"
                        android:text=" %"
                        android:textSize="12sp"
                        android:textColor="#ffbc32"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_explain3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="33dp"
                        android:background="@drawable/bg_explain"
                        android:text="黄灯算力异常"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:textColor="#666666"/>
                </RelativeLayout>

            </LinearLayout>

            <View android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#f2f2f2"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_monitor_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/operation_monitoricon"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv_monitor_img"
                    android:text="矿场监控"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginLeft="5dp"/>

            </RelativeLayout>

            <View android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f2f2f2"/>

            <LinearLayout
                android:id="@+id/ll_mine_area_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>