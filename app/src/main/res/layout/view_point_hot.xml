<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:weightSum="3"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"
              android:background="#ffffff"
              android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_hot_layout1"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_hot_img1"
            android:layout_width="104dp"
            android:src="@drawable/common_details_carousel_placeholder"
            android:layout_height="104dp"/>

        <TextView
            android:id="@+id/tv_hot_name1"
            android:text="热卖产品。。。。。"
            android:layout_marginTop="6dp"
            android:textSize="11sp"
            android:lines="1"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_hot_price1"
            android:text="价格：00.00"
            android:textColor="#ff0000"
            android:layout_marginTop="8dp"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_hot_layout2"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_hot_img2"
            android:layout_width="104dp"
            android:src="@drawable/common_details_carousel_placeholder"
            android:layout_height="104dp"/>

        <TextView
            android:id="@+id/tv_hot_name2"
            android:text="热卖产品。。。。。"
            android:layout_marginTop="6dp"
            android:textSize="11sp"
            android:lines="1"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_hot_price2"
            android:text="价格：00.00"
            android:textColor="#ff0000"
            android:layout_marginTop="8dp"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_hot_layout3"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_hot_img3"
            android:layout_width="104dp"
            android:src="@drawable/common_details_carousel_placeholder"
            android:layout_height="104dp"/>

        <TextView
            android:id="@+id/tv_hot_name3"
            android:text="热卖产品。。。。。"
            android:layout_marginTop="6dp"
            android:lines="1"
            android:ellipsize="end"
            android:textSize="11sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_hot_price3"
            android:text="价格：00.00"
            android:textColor="#ff0000"
            android:layout_marginTop="8dp"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>