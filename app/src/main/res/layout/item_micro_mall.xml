<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#f2f2f2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="189dp">

        <ImageView
            android:id="@+id/iv_m_mall_img"
            android:layout_width="189dp"
            android:src="@drawable/common_details_carousel_placeholder"
            android:layout_height="189dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="12dp"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_m_mall_title"
                android:text="醉相思--465465166545654"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:gravity="left" android:lines="2" android:ellipsize="end"
                android:textColor="#000000"
                android:textSize="14sp"/>

            <TextView
                android:text="价格："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:gravity="left"
                android:textColor="#ff0000"
                android:textSize="11sp"/>

            <TextView
                android:id="@+id/tv_m_mall_price"
                android:text="168.00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:gravity="left"
                android:textColor="#ff0000"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_m_mall_submit"
                android:text="立即购买"
                android:layout_width="107dp"
                android:layout_height="28dp"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:background="@drawable/bg_micro_txt"
                android:textColor="#ff0000"
                android:textSize="14sp"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>