<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical">

    <include layout="@layout/main_title" />

    <include layout="@layout/gray_line" />

    <RelativeLayout
        android:id="@+id/rl_user_info"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:clickable="true">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="17dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="17dp"
            android:src="@drawable/category_first_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:text="个人信息"
            android:textColor="#333" />
    </RelativeLayout>


    <include layout="@layout/gray_line" />

    <RelativeLayout
        android:id="@+id/rl_update_login_pwd"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#fff"
        android:clickable="true">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="17dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="17dp"
            android:src="@drawable/category_first_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:text="修改登录密码"
            android:textColor="#333" />
    </RelativeLayout>

    <include layout="@layout/gray_line" />

    <RelativeLayout
        android:id="@+id/rl_set_pay_pw"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#fff"
        android:clickable="true">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="17dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="17dp"
            android:src="@drawable/category_first_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:text="设置安全密码"
            android:textColor="#333" />
    </RelativeLayout>

    <include layout="@layout/gray_line" />

    <RelativeLayout
        android:id="@+id/rl_about_us"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:clickable="true">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="17dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="17dp"
            android:src="@drawable/category_first_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:text="关于我们"
            android:textColor="#333" />
    </RelativeLayout>


    <include layout="@layout/gray_line" />

    <RelativeLayout
        android:id="@+id/rl_kefu"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#fff"
        android:clickable="true">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="17dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="17dp"
            android:src="@drawable/category_first_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:text="联系客服"
            android:textColor="#333" />
    </RelativeLayout>

    <include layout="@layout/gray_line" />

    <Button
        android:id="@+id/back_login"
        style="@style/default_btn"
        android:layout_below="@+id/rl_password"
        android:layout_marginTop="45dp"
        android:background="@drawable/button_color_selector"
        android:text="安全退出"
        android:textColor="#ffffff"
        android:textSize="17dp" />
</LinearLayout>
