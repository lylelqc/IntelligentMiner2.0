<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:layout_marginTop="4dp"
              android:background="#f2f2f2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#fff"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="加盟类型" android:gravity="center"
            android:textSize="15sp"
            android:textColor="#2e2e2e"
            android:paddingLeft="12dp"
            />

        <Spinner
            android:id="@+id/sp_join_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:entries="@array/sp_join_2"
            android:singleLine="true"
            android:textSize="15sp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:layout_marginTop="1dp"
        android:background="#fff"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="会  员  手  机"
            android:textSize="15sp"
            android:textColor="#2e2e2e"
            android:layout_marginLeft="12dp"
            />

        <EditText
            android:id="@+id/et_join_1_member"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:hint="请输入会员号"
            android:background="@null"
            android:textSize="15sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:layout_marginTop="1dp"
        android:background="#fff"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="真  实  姓  名"
            android:textSize="15sp"
            android:textColor="#2e2e2e"
            android:layout_marginLeft="12dp"
            />

        <EditText
            android:id="@+id/et_join_1_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:hint="请输入姓名"
            android:background="@null"
            android:textSize="15sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:layout_marginTop="1dp"
        android:background="#fff"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="手机验证码"
            android:textSize="15sp"
            android:textColor="#2e2e2e"
            android:layout_marginLeft="12dp"
            />

        <EditText
            android:id="@+id/et_join_1_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:hint="请输入验证码"
            android:background="@null"
            android:textSize="15sp"/>

        <Button
            android:id="@+id/btn_send_code_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="13dp"
            android:textColor="#0aaadc"
            android:background="#ffffff"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/reg_get_code"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:layout_marginTop="1dp"
        android:background="#fff"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="第一识别码"
            android:textSize="15sp"
            android:textColor="#2e2e2e"
            android:layout_marginLeft="12dp"
            />

        <EditText
            android:id="@+id/et_join_1_sbm_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:hint="请输入第一识别码"
            android:background="@null"
            android:textSize="15sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:layout_marginTop="1dp"
        android:background="#fff"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="第二识别码"
            android:textSize="15sp"
            android:textColor="#2e2e2e"
            android:layout_marginLeft="12dp"
            />

        <EditText
            android:id="@+id/et_join_1_sbm_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:hint="请输入第二识别码"
            android:background="@null"
            android:textSize="15sp"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_NextStepOne"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/click_seletor"
            android:text="下一步"
            android:textColor="#ffffff"
            android:textSize="18dp"/>
    </RelativeLayout>
</LinearLayout>
