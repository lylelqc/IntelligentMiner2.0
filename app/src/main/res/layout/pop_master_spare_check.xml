<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="配件使用时间"
                android:textColor="#848689"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="22dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_master_spare_begin_time"
                    android:layout_width="109dp"
                    android:layout_height="29dp"
                    android:background="@drawable/shape_f6f6f6_3dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_master_spare_begin_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#353a3e"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="11dp"
                        android:layout_height="7dp"
                        android:layout_marginLeft="14dp"
                        android:layout_toRightOf="@+id/tv_repair_begin_ptime"
                        android:background="@drawable/xiala_weixiudan_icon" />

                </LinearLayout>

                <TextView
                    android:layout_width="31dp"
                    android:layout_height="26dp"
                    android:gravity="center"
                    android:text="-"
                    android:textColor="#3a3a3a"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/ll_master_spare_end_time"
                    android:layout_width="109dp"
                    android:layout_height="29dp"
                    android:background="@drawable/shape_f6f6f6_3dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_master_spare_end_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#353a3e"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="11dp"
                        android:layout_height="7dp"
                        android:layout_marginLeft="14dp"
                        android:layout_toRightOf="@+id/tv_repair_end_ptime"
                        android:background="@drawable/xiala_weixiudan_icon" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/sly_line_ececec" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="21dp"
            android:text="选择配件"
            android:textColor="#353a3e"
            android:textSize="14sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="15dp">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/tv_master_spare_reset"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_btn_gradient_blue"
            android:gravity="center"
            android:text="重置"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_master_spare_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_btn_gradient_blue2"
            android:gravity="center"
            android:text="完成"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>