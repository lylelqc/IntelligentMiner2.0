<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/rl_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/sly_navigation_bar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rl_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="24dp"
                android:paddingLeft="20dp">

                <TextView
                    android:id="@+id/mine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:layout_alignParentLeft="true"
                    android:text="我的"/>

                <TextView
                    android:id="@+id/tv_xiala"
                    android:layout_width="15dp"
                    android:layout_height="10dp"
                    android:layout_toRightOf="@+id/mine"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="10dp"
                    android:visibility="gone"
                    android:background="@drawable/jiantou_wode_icon"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="6dp"
                android:gravity="bottom"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/msg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:paddingLeft="14dp"
                        android:paddingRight="14dp"
                        android:paddingTop="20dp"
                        android:textColor="@color/white"
                        android:text="消息"/>

                    <TextView
                        android:id="@+id/tv_new_msg_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="35dp"
                        android:background="@drawable/red_xiaoxi_icon"
                        android:gravity="center"
                        android:paddingLeft="1dp"
                        android:paddingRight="1dp"
                        android:text="0"
                        android:textSize="8dp"
                        android:textColor="@color/white"/>
                </RelativeLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="14dp"
                    android:background="@color/white"/>
                <TextView
                    android:id="@+id/shezhi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:paddingLeft="14dp"
                    android:paddingRight="14dp"
                    android:paddingTop="20dp"
                    android:textColor="@color/white"
                    android:text="设置"/>

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_member"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:visibility="visible"
            android:background="@color/sly_navigation_bar">

            <ImageView
                android:id="@+id/iv_head_icon"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentLeft="true"
                android:clickable="false"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:src="@drawable/my_photo_no"/>

            <LinearLayout
                android:id="@+id/ll_huiyuan"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/iv_head_icon"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical"
                    android:layout_gravity="center">

                    <TextView
                        android:id="@+id/tv_main_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="立即登录"
                        android:textColor="@color/white"
                        android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/tv_main_msg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="登陆后可享受更多特权"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/white"
                        android:textSize="12sp"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_code"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="31dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="49dp"
                    android:visibility="gone"
                    android:src="@drawable/code"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/tv_account"
                android:layout_width="10dp"
                android:layout_height="17dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/arrow_tip"
                android:gravity="center_vertical"/>
        </RelativeLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/sly_line_gray"
            android:orientation="vertical">
            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/rl_my_shebei"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="#fff">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="17dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="17dp"
                    android:src="@drawable/category_first_arrow"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:drawableLeft="@drawable/my_equipment"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text="我的设备"
                    android:textColor="#666"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_balance"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="0.5dp"
                android:background="#fff"
                android:clickable="true">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="17dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="17dp"
                    android:src="@drawable/category_first_arrow"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:drawableLeft="@drawable/my_balance"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text="余额"
                    android:textColor="#666"/>
            </RelativeLayout>

            <RelativeLayout
                android:visibility="gone"
                android:layout_marginTop="0.5dp"
                android:id="@+id/rl_weixiu"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="#fff"
                android:clickable="true">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="17dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="17dp"
                    android:src="@drawable/category_first_arrow"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:drawableLeft="@drawable/my_repair"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text="维修单"
                    android:textColor="#666"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_tongji"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="0.5dp"
                android:background="#fff"
                android:clickable="true">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="17dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="17dp"
                    android:src="@drawable/category_first_arrow"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:drawableLeft="@drawable/my_statistics"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text="统计"
                    android:textColor="#666"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_smrenzheng"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="0.5dp"
                android:background="#fff"
                android:clickable="true">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="17dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="17dp"
                    android:src="@drawable/category_first_arrow"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:drawableLeft="@drawable/my_authentication"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text="身份认证"
                    android:textColor="#666"/>
            </RelativeLayout>

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/rl_tobe_manager"
                android:layout_width="match_parent"
                android:layout_marginTop="0.5dp"
                android:layout_height="45dp"
                android:background="#fff"
                android:clickable="true">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="17dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="17dp"
                    android:src="@drawable/category_first_arrow"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:drawableLeft="@drawable/my_authentication"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text="成为矿场主"
                    android:textColor="#666"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_shebeicount"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="0.5dp"
                android:background="#fff"
                android:clickable="true"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_shebei_count"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:textColor="#666"
                    android:textSize="15sp"
                    android:hint=""
                    android:layout_marginRight="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:drawableLeft="@drawable/my_equipment"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text="设备总数"
                    android:textColor="#666"/>
            </RelativeLayout>

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/rl_shebeiManager"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="0.5dp"
                android:background="#fff"
                android:clickable="true">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="17dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="17dp"
                    android:src="@drawable/category_first_arrow"/>

                <TextView
                    android:id="@+id/tv_shebeiManager"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:textColor="#666"
                    android:textSize="15sp"
                    android:hint=""
                    android:layout_marginRight="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:drawableLeft="@drawable/manage_wode_icon"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text="矿机管理"
                    android:textColor="#666"/>
            </RelativeLayout>

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/rl_online"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="0.5dp"
                android:background="#fff"
                android:clickable="true">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="17dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="17dp"
                    android:src="@drawable/category_first_arrow"/>

                <TextView
                    android:id="@+id/tv_online"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:textColor="#666"
                    android:textSize="15sp"
                    android:hint=""
                    android:layout_marginRight="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:drawableLeft="@drawable/online_wode_icon"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text="矿机上线"
                    android:textColor="#666"/>
            </RelativeLayout>

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/rl_offline"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="0.5dp"
                android:background="#fff"
                android:clickable="true">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="17dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="17dp"
                    android:src="@drawable/category_first_arrow"/>

                <TextView
                    android:id="@+id/tv_offline"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:textColor="#666"
                    android:textSize="15sp"
                    android:hint=""
                    android:layout_marginRight="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:drawableLeft="@drawable/outline_wode_icon"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text="矿机下线"
                    android:textColor="#666"/>
            </RelativeLayout>

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/rl_monitor"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="0.5dp"
                android:background="#fff"
                android:clickable="true">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="17dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="17dp"
                    android:src="@drawable/category_first_arrow"/>

                <TextView
                    android:id="@+id/tv_monitor"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:textColor="#666"
                    android:textSize="15sp"
                    android:hint=""
                    android:layout_marginRight="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:drawableLeft="@drawable/look_wode_icon"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text="矿机监控"
                    android:textColor="#666"/>
            </RelativeLayout>

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/rl_weixiudanManager"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="0.5dp"
                android:background="#fff"
                android:clickable="true">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="17dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="17dp"
                    android:src="@drawable/category_first_arrow"/>

                <TextView
                    android:id="@+id/tv_weixiudanManager"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:textColor="#666"
                    android:textSize="15sp"
                    android:hint=""
                    android:layout_marginRight="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:drawableLeft="@drawable/repairorder_wode_icon"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text="维修单据管理"
                    android:textColor="#666"/>
            </RelativeLayout>

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/rl_attendance"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="0.5dp"
                android:background="#fff"
                android:clickable="true">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="17dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="17dp"
                    android:src="@drawable/category_first_arrow"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:drawableLeft="@drawable/qiandao_wode_icon"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text="上下班打卡"
                    android:textColor="#666"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:visibility="gone"
                android:orientation="horizontal"
                android:layout_marginTop="0.5dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4">

                    <LinearLayout
                        android:id="@+id/ll_main_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:paddingBottom="15dp"
                        android:layout_marginLeft="15dp"
                        android:paddingTop="15dp">

                        <TextView
                            android:id="@+id/tv_frag_main_balance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="#ff4548"
                            android:textSize="16dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="17dp"
                            android:text="积分"
                            android:textColor="#333333"
                            android:textSize="12dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_ev"
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:paddingBottom="15dp"
                        android:paddingTop="15dp"
                        android:visibility="invisible">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="#333333"
                            android:textSize="18dp"
                            android:src="@drawable/my_package"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="礼包"
                            style="@style/mineText"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:paddingBottom="15dp"
                        android:paddingTop="15dp"
                        android:visibility="invisible">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="#333333"
                            android:textSize="18dp"
                            android:src="@drawable/my_package"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="礼包"
                            style="@style/mineText"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:paddingBottom="15dp"
                        android:paddingTop="15dp"
                        android:visibility="invisible">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="#333333"
                            android:textSize="18dp"
                            android:src="@drawable/my_package"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="礼包"
                            style="@style/mineText"/>
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/myhome_column_cor"/>

                <LinearLayout
                    android:id="@+id/ll_money"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我的钱包"
                        android:drawableTop="@drawable/my_wallet"
                        android:drawablePadding="7dp"
                        style="@style/mineText"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>