<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical">

    <include layout="@layout/main_title" />

    <include layout="@layout/gray_line" />

    <RelativeLayout
        android:id="@+id/rl_newpassword"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_below="@+id/tv_title_ch"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="#fff">

        <include layout="@layout/gray_line" />

        <EditText
            android:id="@+id/et_newpassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@null"
            android:hint="设置安全密码"
            android:inputType="numberPassword"
            android:maxLength="6"
            android:singleLine="true"
            android:textColor="#000"
            android:textColorHint="@color/sly_text_999999"
            android:textSize="15sp" />
    </RelativeLayout>

    <include layout="@layout/gray_line" />

    <RelativeLayout
        android:id="@+id/rl_twopassword"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_below="@+id/tv_title_ch"
        android:layout_gravity="center_horizontal"
        android:background="#fff">

        <EditText
            android:id="@+id/et_twopassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@null"
            android:drawablePadding="14dp"
            android:hint="确认安全密码"
            android:inputType="numberPassword"
            android:maxLength="6"
            android:singleLine="true"
            android:textColor="#000"
            android:textColorHint="@color/sly_text_999999"
            android:textSize="15sp" />
    </RelativeLayout>

    <include layout="@layout/gray_line" />

    <RelativeLayout
        android:id="@+id/rl_code"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:layout_gravity="center_horizontal"
        android:background="#fff"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <EditText
            android:id="@+id/et_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/iv_lock"
            android:background="@null"
            android:hint="请输入验证码"
            android:inputType="number"
            android:textColor="#000"
            android:textColorHint="@color/sly_text_999999"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_send_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@null"
            android:text="@string/reg_get_code"
            android:textColor="@color/app_text_blue"
            android:textSize="15sp" />
    </RelativeLayout>

    <include layout="@layout/gray_line" />
    <Button
        android:id="@+id/btn_submit"
        style="@style/default_btn"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/button_color_selector50"
        android:text="提交"
        android:textColor="#fff"
        android:textSize="19sp" />

</LinearLayout>
