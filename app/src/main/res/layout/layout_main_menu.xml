<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingBottom="13dp"
        android:paddingTop="13dp"
        android:weightSum="4">

        <com.sly.app.view.DrawableTextView
            android:id="@+id/tv_menu_1"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:drawablePadding="8dp"
            android:gravity="center_horizontal"
            android:text="邀请好友"
            android:textColor="#333333"
            android:textSize="15sp"
            app:drawableHeight="38dp"
            app:drawablePosition="top"
            app:drawableSrc="@drawable/home_menu_icon2"
            app:drawableWidth="38dp"/>

        <com.sly.app.view.DrawableTextView
            android:id="@+id/tv_menu_2"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:drawablePadding="8dp"
            android:gravity="center_horizontal"
            android:text="消费社群"
            android:textColor="#333333"
            android:textSize="15sp"
            app:drawableHeight="38dp"
            app:drawablePosition="top"
            app:drawableSrc="@drawable/home_menu_icon3"
            app:drawableWidth="38dp"/>

        <com.sly.app.view.DrawableTextView
            android:id="@+id/tv_menu_3"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:drawablePadding="8dp"
            android:gravity="center_horizontal"
            android:text="积分商城"
            android:textColor="#333333"
            android:textSize="15sp"
            app:drawableHeight="38dp"
            app:drawablePosition="top"
            app:drawableSrc="@drawable/home_menu_icon5"
            app:drawableWidth="38dp"/>

        <com.sly.app.view.DrawableTextView
            android:id="@+id/tv_menu_4"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:drawablePadding="8dp"
            android:gravity="center_horizontal"
            android:text="零元购"
            android:textColor="#333333"
            android:textSize="15sp"
            app:drawableHeight="38dp"
            app:drawablePosition="top"
            app:drawableSrc="@drawable/home_menu_icon4"
            app:drawableWidth="38dp"/>
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingBottom="13dp"
        android:paddingTop="13dp"
        android:weightSum="4">

        <com.sly.app.view.DrawableTextView
            android:id="@+id/tv_menu_5"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:drawablePadding="8dp"
            android:gravity="center_horizontal"
            android:text="宋瓷古茶"
            android:textColor="#333333"
            android:textSize="15sp"
            app:drawableHeight="38dp"
            app:drawablePosition="top"
            app:drawableSrc="@drawable/home_sub_icon1"
            app:drawableWidth="38dp"/>

        <com.sly.app.view.DrawableTextView
            android:id="@+id/tv_menu_6"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:drawablePadding="8dp"
            android:gravity="center_horizontal"
            android:text="最享瘦"
            android:textColor="#333333"
            android:textSize="15sp"
            app:drawableHeight="38dp"
            app:drawablePosition="top"
            app:drawableSrc="@drawable/home_sub_icon2"
            app:drawableWidth="38dp"/>

        <com.sly.app.view.DrawableTextView
            android:id="@+id/tv_menu_7"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:drawablePadding="8dp"
            android:gravity="center_horizontal"
            android:text="齿贝贝"
            android:textColor="#333333"
            android:textSize="15sp"
            app:drawableHeight="38dp"
            app:drawablePosition="top"
            app:drawableSrc="@drawable/home_sub_icon3"
            app:drawableWidth="38dp"/>

        <com.sly.app.view.DrawableTextView
            android:id="@+id/tv_menu_8"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:drawablePadding="8dp"
            android:gravity="center_horizontal"
            android:text="美好地球村"
            android:textColor="#333333"
            android:textSize="15sp"
            app:drawableHeight="38dp"
            app:drawablePosition="top"
            app:drawableSrc="@drawable/home_sub_icon4"
            app:drawableWidth="38dp"/>
    </LinearLayout>


</LinearLayout>