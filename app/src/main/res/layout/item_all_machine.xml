<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="vertical"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:id="@+id/tv_all_machine_type"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:gravity="center"
                android:text="型号"
                android:textSize="13sp"
                android:textColor="@color/sly_text_666666"/>

            <TextView
                android:id="@+id/tv_all_machine_ip"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.4"
                android:gravity="center"
                android:text="IP"
                android:textSize="13sp"
                android:textColor="@color/sly_text_666666"/>

            <TextView
                android:id="@+id/tv_all_machine_miner_code"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:gravity="center"
                android:text="矿工号"
                android:textSize="13sp"
                android:textColor="@color/sly_text_666666"/>

            <TextView
                android:id="@+id/tv_all_machine_area"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:gravity="center"
                android:text="区域"
                android:textSize="13sp"
                android:textColor="@color/sly_text_666666"/>
        </LinearLayout>

        <include layout="@layout/gray_line"/>
    </LinearLayout>
</LinearLayout>