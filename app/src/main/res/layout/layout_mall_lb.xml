<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:src="@drawable/mall_wmall_wdl_img"
            android:scaleType="fitXY"
            android:layout_height="49dp"/>

        <com.sly.app.view.DrawableTextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:textSize="15sp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="12dp"
            app:drawableHeight="25dp"
            android:drawablePadding="12dp"
            android:textColor="#333333"
            android:gravity="center_vertical"
            app:drawablePosition="left"
            android:text="礼包专区"
            app:drawableSrc="@drawable/mall_wmall_lb_title_msg"
            app:drawableWidth="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:id="@+id/ll_sc_a"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="65dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/jw_lb_img1"
                    android:layout_height="65dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="13dp"
                    android:textSize="12sp"
                    android:textColor="#333333"
                    android:gravity="center"
                    android:text="品牌大使专享礼包"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="#FF0000"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:text="价格：1500.00"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_sc_b"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="65dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/jw_lb_img2"
                    android:layout_height="65dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="13dp"
                    android:textSize="12sp"
                    android:textColor="#333333"
                    android:gravity="center"
                    android:text="金牌代理专享礼包"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="#FF0000"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:text="价格：7500.00"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_sc_c"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:layout_width="65dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/jw_lb_img3"
                    android:layout_height="65dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="13dp"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:textColor="#333333"
                    android:text="钻石代理专享礼包"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="#FF0000"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:text="价格：15000.00"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>