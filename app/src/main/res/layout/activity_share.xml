<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="match_parent">

    <include layout="@layout/view_comm_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#ffffff"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@drawable/img_user_share"
                android:layout_height="200dp">

                <ImageView
                    android:id="@+id/iv_share_hp"
                    android:layout_width="81dp"
                    android:src="@drawable/h_portrait"
                    android:background="@drawable/bg_img"
                    android:layout_marginBottom="8dp"
                    android:layout_height="81dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"/>


                <TextView
                    android:id="@+id/tv_share_record"
                    android:layout_width="100dp"
                    android:background="@drawable/bg_share"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:layout_marginBottom="0dp"
                    android:textColor="#333333"
                    android:text="邀请记录"
                    android:layout_alignParentBottom="true" android:textSize="15sp"
                    android:layout_height="35dp"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:text="美好地球村"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="#333333"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="42dp"
                android:layout_marginRight="42dp"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:background="@drawable/bg_share_layout"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginTop="15dp"
                    android:text="APP 扫二维码，成为会员"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textColor="#333333"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/iv_share_code"
                    android:layout_marginTop="12dp"
                    android:padding="10dp"
                    android:layout_width="221dp"
                    android:layout_marginBottom="15dp"
                    android:src="@drawable/common_details_carousel_placeholder"
                    android:layout_height="220dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>