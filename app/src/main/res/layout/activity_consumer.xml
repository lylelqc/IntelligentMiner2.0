<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#f2f2f2"
              android:orientation="vertical">

    <include
        android:id="@+id/title"
        layout="@layout/main_title"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="100dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:text="账户余额（元）"
                    android:textSize="12dp"
                    />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="22dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:text="0.00"
                android:textColor="#0aaadc"
                android:textSize="40dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:text="可提现金额（元）"
                android:textSize="12dp"/>

            <TextView
                android:id="@+id/tv_ok_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="0.00"
                android:textColor="#0aaadc"
                android:textSize="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginTop="20dp"
                android:background="#fff"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="17dp"
                        android:text="累计收入（元）"
                        android:textSize="14dp"/>

                    <TextView
                        android:id="@+id/tv_income"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:text="0.00"
                        android:textColor="#0aaadc"
                        android:textSize="20dp"/>
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="#f2f2f2"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="17dp"
                        android:text="累计支出（元）"
                        android:textSize="14dp"/>

                    <TextView
                        android:id="@+id/tv_expenditure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:text="0.00"
                        android:textColor="#0aaadc"
                        android:textSize="20dp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_business"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="#fff"
                    android:clickable="true">

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="17dp"
                        android:layout_marginRight="9dp"
                        android:layout_marginTop="17dp"
                        android:src="@drawable/category_first_arrow"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:drawableLeft="@drawable/my_wallet_icon1"
                        android:drawablePadding="7dp"
                        android:gravity="center_vertical"
                        android:text="交易记录"
                        android:textColor="#282828"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f2f2f2"/>

                <RelativeLayout
                    android:id="@+id/rl_recharge"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="#fff"
                    android:clickable="true">

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="17dp"
                        android:layout_marginRight="9dp"
                        android:layout_marginTop="17dp"
                        android:src="@drawable/category_first_arrow"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:drawableLeft="@drawable/my_wallet_icon2"
                        android:drawablePadding="7dp"
                        android:gravity="center_vertical"
                        android:text="我要充值"
                        android:textColor="#282828"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f2f2f2"/>

                <RelativeLayout
                    android:id="@+id/rl_withdraw"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="#fff"
                    android:clickable="true">

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="17dp"
                        android:layout_marginRight="9dp"
                        android:layout_marginTop="17dp"
                        android:src="@drawable/category_first_arrow"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:drawableLeft="@drawable/my_wallet_icon3"
                        android:drawablePadding="7dp"
                        android:gravity="center_vertical"
                        android:text="我要提现"
                        android:textColor="#282828"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f2f2f2"/>

                <RelativeLayout
                    android:id="@+id/rl_zz"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="#fff"
                    android:clickable="true">

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="17dp"
                        android:layout_marginRight="9dp"
                        android:layout_marginTop="17dp"
                        android:src="@drawable/category_first_arrow"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:drawableLeft="@drawable/my_wallet_icon4"
                        android:drawablePadding="7dp"
                        android:gravity="center_vertical"
                        android:text="我要转账"
                        android:textColor="#282828"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="7dp"
                    android:background="#f2f2f2"/>

                <RelativeLayout
                    android:id="@+id/rl_wallet_a"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="#fff"
                    android:clickable="true"
                    android:visibility="visible">

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="17dp"
                        android:layout_marginRight="9dp"
                        android:layout_marginTop="17dp"
                        android:src="@drawable/category_first_arrow"/>

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:drawableLeft="@drawable/my_wallet_icon6"
                        android:drawablePadding="7dp"
                        android:gravity="center_vertical"
                        android:text="进货款"
                        android:textColor="#282828"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignStart="@+id/textView8"
                        android:layout_marginTop="142dp"
                        android:drawableLeft="@drawable/my_wallet_icon9"
                        android:drawablePadding="7dp"
                        android:gravity="center_vertical"
                        android:text="我的基金"
                        android:textColor="#282828"/>
                </RelativeLayout>

                <View
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f2f2f2"/>

                <RelativeLayout
                    android:id="@+id/rl_wallet_b"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="#fff"
                    android:clickable="true"
                    android:visibility="visible">

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="17dp"
                        android:layout_marginRight="9dp"
                        android:layout_marginTop="17dp"
                        android:src="@drawable/category_first_arrow"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:drawableLeft="@drawable/my_wallet_icon5"
                        android:drawablePadding="7dp"
                        android:gravity="center_vertical"
                        android:text="库存额"
                        android:textColor="#282828"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f2f2f2"/>

                <RelativeLayout
                    android:id="@+id/rl_wallet_c"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="#fff"
                    android:clickable="true"
                    android:visibility="visible">

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="17dp"
                        android:layout_marginRight="9dp"
                        android:layout_marginTop="17dp"
                        android:src="@drawable/category_first_arrow"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:drawableLeft="@drawable/my_wallet_icon7"
                        android:drawablePadding="7dp"
                        android:gravity="center_vertical"
                        android:text="产品券"
                        android:textColor="#282828"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f2f2f2"/>

                <RelativeLayout
                    android:id="@+id/rl_wallet_d"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="#fff"
                    android:clickable="true"
                    android:visibility="visible">

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="17dp"
                        android:layout_marginRight="9dp"
                        android:layout_marginTop="17dp"
                        android:src="@drawable/category_first_arrow"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:drawableLeft="@drawable/my_wallet_icon8"
                        android:drawablePadding="7dp"
                        android:gravity="center_vertical"
                        android:text="授信额度"
                        android:textColor="#282828"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f2f2f2"/>

                <RelativeLayout
                    android:id="@+id/rl_wallet_e"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="#fff"
                    android:clickable="true"
                    android:visibility="visible">

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="17dp"
                        android:layout_marginRight="9dp"
                        android:layout_marginTop="17dp"
                        android:src="@drawable/category_first_arrow"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:drawableLeft="@drawable/my_wallet_icon9"
                        android:drawablePadding="7dp"
                        android:gravity="center_vertical"
                        android:text="我的基金"
                        android:textColor="#282828"/>
                </RelativeLayout>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
