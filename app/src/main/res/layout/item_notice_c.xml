<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:descendantFocusability="blocksDescendants"
              android:background="#f2f2f2"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="10dp"
            android:paddingBottom="12dp">

            <ImageView
                android:id="@+id/iv_msg_img"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/default_image"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:orientation="vertical"
                android:layout_marginTop="3dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_toLeftOf="@+id/tv_msg_date"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_msg_title"
                        android:layout_width="match_parent"
                        android:lines="1"
                        android:textColor="#333333"
                        android:ellipsize="end" android:textSize="14sp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tv_msg_abstract" android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:lines="2" android:textSize="11sp"
                        android:ellipsize="end"
                        android:layout_height="fill_parent"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent" android:layout_marginTop="5dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_msg_class"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="17/08/19"
                        android:textColor="#999999"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/tv_msg_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:text="17/08/19"
                        android:textColor="#999999"
                        android:textSize="12sp"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>