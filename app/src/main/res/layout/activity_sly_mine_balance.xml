<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical">

    <include
        android:id="@+id/title"
        layout="@layout/main_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="100dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="31dp"
                android:text="提现金额（元）"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_ok_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="0.00"
                android:textColor="@color/app_text_blue2"
                android:textSize="40sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_business"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="#fff"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="17dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/put_forward_next" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/put_forward_record"
                        android:drawablePadding="13dp"
                        android:gravity="center_vertical"
                        android:text="交易记录"
                        android:textColor="@color/sly_text_666666"
                        android:textSize="15sp" />
                </RelativeLayout>


                <LinearLayout
                    android:id="@+id/ll_miner_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/rl_recharge"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="1dp"
                        android:background="#fff"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp">

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="17dp"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/put_forward_next" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/put_forward_reset"
                            android:drawablePadding="13dp"
                            android:gravity="center_vertical"
                            android:text="我要充值"
                            android:textColor="@color/sly_text_666666"
                            android:textSize="15sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_recharge_record"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="#fff"
                        android:layout_marginTop="1dp"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp">

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="17dp"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/put_forward_next" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/put_forward_record"
                            android:drawablePadding="13dp"
                            android:gravity="center_vertical"
                            android:text="充值记录"
                            android:textColor="@color/sly_text_666666"
                            android:textSize="15sp" />
                    </RelativeLayout>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rl_withdraw"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="1dp"
                    android:background="#fff"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="17dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/put_forward_next" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/put_forward_2"
                        android:drawablePadding="13dp"
                        android:gravity="center_vertical"
                        android:text="我要提现"
                        android:textColor="@color/sly_text_666666"
                        android:textSize="15sp" />
                </RelativeLayout>

                <include layout="@layout/gray_line" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
