<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">
        
        <ImageView
            android:id="@+id/iv_repair_icon"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:src="@drawable/news_repair_icon"
            android:layout_marginTop="18dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/iv_repair_icon"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/tv_notice_new_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="矿机故障"
                android:textSize="16sp"
                android:textColor="@color/sly_text_333333"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="故障原因："
                    android:textSize="14sp"
                    android:textColor="@color/sly_text_666666"/>

                <TextView
                    android:id="@+id/tv_notice_new_reason"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="14sp"
                    android:textColor="@color/sly_text_666666"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_notice_new_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:textSize="10sp"
                android:textColor="@color/sly_text_999999"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_notice_new_check_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_transparent_24dp"
            android:text="查看详情"
            android:textSize="11sp"
            android:textColor="@color/sly_text_666666"
            />

    </RelativeLayout>

    <include layout="@layout/gray_line"/>

</LinearLayout>